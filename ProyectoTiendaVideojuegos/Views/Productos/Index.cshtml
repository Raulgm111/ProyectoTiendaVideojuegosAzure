@model List<Producto>

<!-- Carusel -->
<body>
    <div class=" sliderAx h-auto" style="z-index: 1;">
        <div id="slider-1" class="mx-auto">
            <div class="bg-cover bg-center text-white py-24 px-10 object-cover" id="carusel" style='background-image: url(@Url.Content("~/Images/carusel.jpg"));'>
                <div class="md:w-1/2">
                    <p class="font-bold text-sm uppercase">Consolas</p>
                    <p class="text-3xl font-bold">PlayStation 5 Black</p>
                    <p class="text-2xl mb-10 leading-none">PlayStation 5</p>
                    <a href="#" class="bg-purple-800 py-4 px-8 text-white font-bold uppercase text-xs rounded hover:bg-gray-200 hover:text-gray-800">Comprar</a>
                </div>
            </div> <!-- container -->
        </div>

        <div id="slider-2" class="mx-auto">
            <div class="bg-cover bg-center  h-auto text-white py-24 px-10 object-fill" style='background-image: url(@Url.Content("~/Images/carusel2.jpg"));'>

                <p class="font-bold text-sm uppercase">Consolas</p>
                <p class="text-3xl font-bold">Pack Xbox Series X + Forza Horizon 5</p>
                <p class="text-2xl mb-10 leading-none"> Xbox Series X</p>
                <a href="#" class="bg-purple-800 py-4 px-8 text-white font-bold uppercase text-xs rounded hover:bg-gray-200 hover:text-gray-800">Comprar</a>

            </div> <!-- container -->
        </div>
    </div>
</body>
<h1 class="text-4xl md:text-6xl font-bold text-center text-purple-800"><u>Juegos Play Station 4</u></h1>
<div class="bodyCartas">
    @foreach (var item in Model) {
    <!-- Card -->
    <div class="containerCartas">
        <div class="cartas">
            <div class="boxCartas">
                <div class="contentCartas">
                    <img style="width:250px" src="@Html.DisplayFor(modelItem => item.Imagen)">
                    <h3 style="font-family:Verdana">@Html.DisplayFor(modelItem => item.NombreProducto)</h3>
                        <p style="font-family:Arial">@Html.DisplayFor(modelItem => item.Genero)</p>
                    <button class="px-3 py-1 font-semibold rounded bn632-hover bn18">Comprar</button>
                </div>
            </div>
        </div>
    </div>
    }
</div>
